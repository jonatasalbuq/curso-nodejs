{{#each erros}}

    <div class="alert alert-danger">{{texto}}</div>
    
{{/each}}

<h1 class="h3">Editar postagem:</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="post">
        <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
                <input type="text" name="titulo" placeholder="Título da postagem" class="form-control"
                required value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" placeholder="Slug da postagem" class="form-control"
                required value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control"
                required value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
                <select name="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria foi encontrada</option>
                {{/each}}
                </select><br>
            <button type="submit" class="btn btn-success">Editar postagem</button>
        </form>
    </div>
</div>